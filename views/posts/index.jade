extends ../layout

block scripts
  script(src="/javascripts/posts.js")

block content
  .row
    .span16

      // new post
      .row.entry

        .avatar-info
          // avatar
          .avatar
            a.avatar(href="#", style="background-image:url('#{avatar(user.md5, 64)}')", title="Jason's blog")

        .new-post
          .tips
            div(style="float:right;")
              a(href="#") Help &nbsp;
              &nbsp;
              a.collapse(href="#") &times;
            div
              a(href="#") Upload Image
              #btn-uploader
              &nbsp;
          form(action="/posts/new", method="post", name='post')
            .clearfix
              textarea.default(placeholder="Say something", name='content')
            .preview

            .clearfix.actions
              input.btn.primary(type="submit", value="Post")

        .span4.sidebar
          a.btn(data-controls-modal="my-modal", data-backdrop="static", data-keyboard="true") foo1 &nbsp;
          a.btn#pop-info info &nbsp;

          script
            $(function () {
              $("#pop-info").popover({
                  offset: 10
                  , placement: 'below'
                  , title:  function(){return 'the title'}
                  , content : function(){return 'the the content'}
              });
            });

          #my-modal.modal.hide.fade
            .modal-header
              a.close(href="#") &times;
              h3 Modal Heading
            .modal-body
              p One fine bodyâ€¦
              p this is a test modal
            .modal-footer
              <a href="#" class="btn primary">Primary</a>
              <a href="#" class="btn secondary">Secondary</a>

          #editor-help.hide
            h3 markdown help
            p * list item
            p + list item
            p *italic*
            p **bold**
            p # h1
            p ## h2 
            p ###### h6
            p h1<br>===
            p h2<br>---
            p [link](http://www)
            p ![image](http://www)

      #posts-list
        != partial('entry', locals.posts)
